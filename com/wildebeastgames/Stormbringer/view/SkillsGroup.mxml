<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="100%" height="100%"
		 xmlns:view="view.*"
		 >
	<fx:Script>
		<![CDATA[
			import model.Character;
			import model.Skill;
			import model.SkillLoad;
			
			[Bindable] public var character:Character;
			[Bindable] public var context:String;
			[Bindable] public var addF:Function;
			
			protected function addB_clickHandler(event:MouseEvent):void
			{
				var sk:Skill = new Skill();
				sk.name = "Add Skill";
				sk.complete = false;
				sk.character = character;
				
				if( addF != null)
					addF( sk);
			}
		]]>
	</fx:Script>

	<s:layout>
		<s:VerticalLayout horizontalAlign="center"/>
	</s:layout>

	<view:SkillListGroup id="skillLG"
						 character="{character}"
						 context="{context}"
						 skillF="{addF}"
						 />
	<s:Button id="addB" label="Add Free Skill" click="addB_clickHandler(event)"/>
</s:Group>
