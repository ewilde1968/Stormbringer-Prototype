<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100%"
		 >
	<fx:Script>
		<![CDATA[
			import mx.events.ValidationResultEvent;
			
			[Bindable] private var ready:Boolean;
			[Bindable] public var sendF:Function;
			
			protected function sendB_clickHandler(event:MouseEvent):void
			{
				if( sendF != null)
					sendF( emailTI.text);
			}
		]]>
	</fx:Script>

	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle"/>
	</s:layout>

	<fx:Declarations>
		<mx:EmailValidator source="{emailTI}" property="text"
						   valid="{ready=true}" invalid="{ready=false}"
						   />
	</fx:Declarations>
	
	<s:VGroup horizontalAlign="right">
		<s:HGroup verticalAlign="middle">
			<s:Label text="email address"/>
			<s:TextInput id="emailTI" widthInChars="20"/>
		</s:HGroup>
		<s:Spacer height="30"/>
		<s:Button id="sendB" label="Send Password"
				  enabled="{ready}"
				  click="sendB_clickHandler(event)"
				  />
	</s:VGroup>
</s:Group>
